<%= form_for(@article) do |a| %>
  <div class="form-group">
    <%= a.label :title, class: 'control-label required' %>
    <%= a.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= a.label :content, class: 'control-label required' %>
    <%= a.text_area(:content, { rows: 10, class: 'form-control' }) %>
  </div>

  <%= a.submit class: 'btn btn-default' %>
<% end %>
